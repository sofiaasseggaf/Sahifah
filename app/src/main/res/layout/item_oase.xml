<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
        <ImageView
            android:id="@+id/oase_img"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/img_oase_2">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/oase_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aturan mencukur rambut saat mengunjungi tanah suci"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:textSize="6pt"></TextView>
            <TextView
                android:id="@+id/oase_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Maret 2019, oleh Hamid"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:textSize="5pt"></TextView>
        </LinearLayout>

</LinearLayout>